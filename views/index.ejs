<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Čítanie na dnes</title>
    <style>

      * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
      }
      .reflection {
        width: 100%;
        max-width: 1200px;
        margin: auto auto;
        padding: 5%;
      }

      .help {
        width: 300px;
        margin: 0 auto;
      }

      @media print {
        .title, .help, nav {
          display: none;
        }

        .pagination {
          page-break-before: always;
        }
      }
    </style>
  </head>
  <body>

    
    <nav style="text-align: center;">
      <%if (home) { %>
      <a href="/history">História</a> •
      <% } %>
      <%if (!home) { %>
      <a href="/">Domov</a> •
      <% } %>
      <a href="/dashboard">Dashboard</a>
    </nav>

    <%if (!home) { %>
    <div class="help">
      <p>Nápoveda na vyhľadávanie podľa parametrov:</p>
      <ul>
        <li>presný deň: <code>date=2014-03-05</code></li>
        <li>začiatočný deň: <code>start=2014-02-01</code></li>
        <li>koncový deň: <code>end=2014-02-10</code></li>
      </ul>
      
    </div>
    <% } %>
    
        
    <% for (var i=0; i<reflections.length; i++) { %>

      <div class="reflection">   
      
        <h1 class="title"><center>Čítanie na dnes</center></h1>
             
        <section>
          <%- reflections[i].html %>
        </section>
      </div>
      
      <% if (i+1 !== reflections.length) { %>
        <div class="pagination"></div>
      <% } %>
    <% } %>
  </body>
</html>